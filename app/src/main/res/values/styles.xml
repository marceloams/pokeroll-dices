<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pokemon_text_style">
        <item name="fontFamily">@font/pokemon_solid</item>
        <item name="android:textColor">@color/yellow_pokemon</item>
        <item name="android:shadowColor">@color/blue_pokemon</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="fontFamily">@font/pokemon_gb</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>